/* --- Responsividade --- */

/* Tablets (landscape) e desktops menores */
@media (max-width: 1024px) {
    h1 { font-size: 3em; }
    h2 { font-size: 2em; }
    .hero-content p { font-size: 1.2em; }

    .about-layout {
        gap: 40px;
    }
    .about-image-column, .about-text-column {
        flex: 1 1 100%; /* Empilha as colunas */
    }
    .about-text-column h2 { font-size: 2.5em; }
}

/* Tablets (portrait) e celulares grandes */
@media (max-width: 768px) {
    .navbar .nav-links {
        display: none; /* Esconde os links para o menu hamburguer */
        flex-direction: column;
        width: 100%;
        position: absolute;
        top: 70px; /* Abaixo do header */
        left: 0;
        background-color: var(--color-dark);
        box-shadow: 0 10px 20px var(--color-shadow-dark);
        padding: 20px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    .navbar .nav-links.active {
        display: flex; /* Mostra os links quando o menu está ativo */
    }
    .nav-links li {
        text-align: center;
        margin: 10px 0;
    }
    .nav-links .btn-primary {
        margin-top: 15px;
        width: 80%;
    }
    .menu-toggle {
        display: block; /* Mostra o botão de menu hamburguer */
    }

    h1 { font-size: 2.5em; }
    .hero-content p { font-size: 1em; }
    .hero-btn { padding: 10px 25px; font-size: 1em; }

    .about-section, .products-section {
        padding: 60px 0;
    }
    .about-text-column h2, .products-section h2 {
        font-size: 2em;
    }

    .product-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Duas colunas em telas menores */
    }
}

/* Celulares pequenos */
@media (max-width: 480px) {
    h1 { font-size: 2em; }
    .hero-content p { font-size: 0.9em; }

    .about-layout {
        gap: 30px;
    }
    .about-text-column h2 { font-size: 1.8em; }
    .about-text-column p { font-size: 1em; }

    .products-section h2 { font-size: 1.8em; }
    .product-grid {
        grid-template-columns: 1fr; /* Uma única coluna em celulares */
    }
    .product-card {
        width: 90%;
        margin: 0 auto;
    }
}
